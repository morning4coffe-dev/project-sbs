<Page x:Class="Recurrents.Presentation.Components.StatsBanner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Recurrents.Presentation.Components"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:comp="using:Recurrents.Presentation.Components"
      xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
      xmlns:not_win="http://uno.ui/not_win"
      mc:Ignorable="d not_win">

  <Border CornerRadius="16"
          Visibility="Visible"
          Background="{ThemeResource CardBackground}"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          BorderThickness="1"          
          Grid.Row="1">
    
    <StackPanel>
      <FlipView x:Name="Gallery"
                Background="Transparent"
                Height="230">

        <comp:PaymentLineBanner />
        <comp:TagsChartBanner />
        
      </FlipView>
      
      <PipsPager HorizontalAlignment="Center"
                 Margin="0, 12, 0, 0"
                 NumberOfPages="2"
                 SelectedPageIndex="{x:Bind Path=Gallery.SelectedIndex, Mode=TwoWay}" />
    </StackPanel>
  </Border>
</Page>
